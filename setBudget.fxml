<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SetBudgetController">
   <top>
      <HBox prefHeight="55.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="changeScreenToHomebtn" mnemonicParsing="false" onAction="#changeScreenToHome" prefHeight="55.0" prefWidth="107.0" style="-fx-background-color: white;" text="Home">
               <font>
                  <Font name="Monaco" size="17.0" />
               </font>
            </Button>
            <Label alignment="CENTER" prefHeight="55.0" prefWidth="809.0" style="-fx-background-color: #88EAAA;" text="Set Budget">
               <font>
                  <Font name="Monaco" size="30.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.5" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="field_setBudgetLimit" layoutX="30.0" layoutY="307.0" prefHeight="52.0" prefWidth="393.0" />
                  <Label layoutX="32.0" layoutY="244.0" prefHeight="64.0" prefWidth="263.0" text="Enter Budget Limit for the Month:" wrapText="true">
                     <font>
                        <Font name="Monaco" size="17.0" />
                     </font>
                  </Label>
                  <Button fx:id="button_setBudgetLimit" layoutX="74.0" layoutY="398.0" mnemonicParsing="false" onAction="#setBudgetLimitClick" prefHeight="82.0" prefWidth="303.0" style="-fx-background-color: #88EAAA;" text="Set Budget Limit">
                     <font>
                        <Font name="Monaco" size="22.0" />
                     </font>
                  </Button>
                  <Label layoutX="23.0" layoutY="6.0" prefHeight="37.0" prefWidth="198.0" text="Select Start Date:">
                     <font>
                        <Font name="Monaco" size="17.0" />
                     </font>
                  </Label>
                  <DatePicker layoutX="22.0" layoutY="45.0" prefHeight="52.0" prefWidth="393.0" />
                  <Label layoutX="23.0" layoutY="107.0" prefHeight="37.0" prefWidth="279.0" text="End Date (Default 1 Month):">
                     <font>
                        <Font name="Monaco" size="17.0" />
                     </font>
                  </Label>
                  <DatePicker layoutX="26.0" layoutY="155.0" prefHeight="52.0" prefWidth="393.0" />
               </children>
            </AnchorPane>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label layoutX="77.0" layoutY="-3.0" prefHeight="64.0" prefWidth="315.0" text="Edit Budget Settings" underline="true" wrapText="true">
                     <font>
                        <Font name="Monaco" size="25.0" />
                     </font>
                  </Label>
                  <Label layoutX="9.0" layoutY="48.0" prefHeight="23.0" prefWidth="263.0" text="Increase Budget Limit By:">
                     <font>
                        <Font name="Monaco" size="17.0" />
                     </font></Label>
                  <Button layoutX="103.0" layoutY="142.0" mnemonicParsing="false" prefHeight="47.0" prefWidth="230.0" text="Add Amount ">
                     <font>
                        <Font name="Monaco" size="13.0" />
                     </font>
                  </Button>
                  <TextField layoutX="13.0" layoutY="79.0" prefHeight="51.0" prefWidth="373.0" />
                  <Label layoutX="19.0" layoutY="216.0" prefHeight="23.0" prefWidth="263.0" text="Decrease Budget Limit By:">
                     <font>
                        <Font name="Monaco" size="17.0" />
                     </font>
                  </Label>
                  <TextField layoutX="12.0" layoutY="250.0" prefHeight="51.0" prefWidth="373.0" />
                  <Button layoutX="103.0" layoutY="313.0" mnemonicParsing="false" prefHeight="47.0" prefWidth="230.0" text="Decrease Amount ">
                     <font>
                        <Font name="Monaco" size="13.0" />
                     </font>
                  </Button>
                  <Separator layoutX="-2.0" layoutY="388.0" prefHeight="3.0" prefWidth="455.0" />
                  <Button layoutX="100.0" layoutY="403.0" mnemonicParsing="false" prefHeight="47.0" prefWidth="230.0" style="-fx-background-color: #88EAAA;" text="View Budget Limit">
                     <font>
                        <Font name="Monaco" size="13.0" />
                     </font>
                  </Button>
                  <Button layoutX="100.0" layoutY="462.0" mnemonicParsing="false" prefHeight="47.0" prefWidth="230.0" style="-fx-background-color: #ff6969;" text="Reset Budget Limit">
                     <font>
                        <Font name="Monaco" size="13.0" />
                     </font>
                  </Button>
               </children>
            </AnchorPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>
