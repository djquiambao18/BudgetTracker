<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #E6E6E6;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HomePage.HomeController">

   <children>
      <HBox prefHeight="60.0" prefWidth="900.0" style="-fx-background-color: #88eaaa; -fx-border-color: grey;">
         <children>
            <Button fx:id="button_settings" mnemonicParsing="false" prefHeight="60.0" text="Settings">
               <font>
                  <Font name="Monaco" size="13.0" />
               </font>
            </Button>
            <Label alignment="TOP_LEFT" contentDisplay="CENTER" prefHeight="39.0" prefWidth="688.0" text="Budget Tracker" textFill="WHITE">
               <font>
                  <Font name="Monaco" size="30.0" />
               </font>
               <padding>
                  <Insets left="270.0" />
               </padding>
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </Label>
         </children></HBox>
      <VBox prefHeight="55.0" prefWidth="600.0">
         <children>
            <Label fx:id="balanceLabel" text="Available Balance">
               <font>
                  <Font name="Monaco" size="18.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="75.0" />
               </VBox.margin>
            </Label>
            <StackPane prefHeight="23.0" prefWidth="600.0">
               <children>
                  <ProgressBar fx:id="progressBar" prefHeight="35.0" prefWidth="750.0" progress="${controller.percent}"/>
                  <Label fx:id="label_balanceFraction" text="0/0">
                     <font>
                        <Font name="Monaco" size="18.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
         </children>
         <padding>
            <Insets top="15.0" />
         </padding>
      </VBox>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="60.0">
         <children>
            <Button fx:id="button_logExpenses" onAction="#changeScreenExpenses" mnemonicParsing="false" prefHeight="70.0" prefWidth="270.0" style="-fx-background-color: white; -fx-border-color: grey; -fx-background-radius: 10; -fx-border-radius: 10;" text="Log Expenses">
               <font>
                  <Font name="Monaco" size="30.0" />
               </font></Button>
            <Button fx:id="button_summary" onAction="#click" layoutX="331.0" layoutY="70.0" mnemonicParsing="false" prefHeight="70.0" prefWidth="270.0" style="-fx-background-color: white; -fx-border-color: grey; -fx-background-radius: 10; -fx-border-radius: 10;" text="Summary">
               <font>
                  <Font name="Monaco" size="30.0" />
               </font>
            </Button>
            <Button fx:id="button_saveFile" layoutX="325.0" layoutY="70.0" mnemonicParsing="false" prefHeight="70.0" prefWidth="270.0" style="-fx-background-color: white; -fx-border-color: grey; -fx-background-radius: 10; -fx-border-radius: 10;" text="Save File">
               <font>
                  <Font name="Monaco" size="30.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets top="60.0" />
         </padding>
      </VBox>
   </children>

</VBox>
