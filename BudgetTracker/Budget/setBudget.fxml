<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BudgetTracker.Budget.SetBudgetController">
   <top>
      <HBox prefHeight="55.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="changeScreenToHomebtn" mnemonicParsing="false" onAction="#changeScreenToHome" prefHeight="55.0" prefWidth="107.0" style="-fx-background-color: white;" text="Home">
               <font>
                  <Font name="Monaco" size="17.0" />
               </font>
            </Button>
            <Label alignment="CENTER" prefHeight="55.0" prefWidth="809.0" style="-fx-background-color: #88EAAA;" text="Set Budget">
               <font>
                  <Font name="Monaco" size="30.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.5" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="field_budgetAmt" layoutX="23.0" layoutY="131.0" prefHeight="52.0" prefWidth="393.0" promptText="0.0" />
                  <Label layoutX="25.0" layoutY="68.0" prefHeight="64.0" prefWidth="263.0" text="Enter Budget for the Month:" wrapText="true">
                     <font>
                        <Font name="Monaco" size="17.0" />
                     </font>
                  </Label>
                  <Button layoutX="68.0" layoutY="272.0" mnemonicParsing="false" onAction="#button_setBudgetAmt" prefHeight="82.0" prefWidth="303.0" style="-fx-background-color: #88EAAA;" text="Set Budget Amount">
                     <font>
                        <Font name="Monaco" size="22.0" />
                     </font>
                  </Button>
                  <Label alignment="CENTER" contentDisplay="CENTER" layoutX="44.0" layoutY="4.0" prefHeight="64.0" prefWidth="315.0" text="Enter Month's Budget" textAlignment="CENTER" underline="true">
                     <font>
                        <Font name="Monaco" size="25.0" />
                     </font>
                  </Label>
                  <Label fx:id="dateLabel" layoutX="23.0" layoutY="202.0" prefHeight="33.0" prefWidth="219.0" />
               </children>
            </AnchorPane>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label layoutX="14.0" layoutY="61.0" prefHeight="23.0" prefWidth="263.0" text="Increase Budget Limit By:">
                     <font>
                        <Font name="Monaco" size="17.0" />
                     </font></Label>
                  <Button layoutX="100.0" layoutY="147.0" mnemonicParsing="false" onAction="#button_addAmount" prefHeight="47.0" prefWidth="230.0" text="Add Amount ">
                     <font>
                        <Font name="Monaco" size="13.0" />
                     </font>
                  </Button>
                  <TextField fx:id="field_increaseBudget" layoutX="18.0" layoutY="92.0" prefHeight="51.0" prefWidth="373.0" promptText="0.0" />
                  <Label layoutX="25.0" layoutY="222.0" prefHeight="23.0" prefWidth="263.0" text="Decrease Budget Limit By:">
                     <font>
                        <Font name="Monaco" size="17.0" />
                     </font>
                  </Label>
                  <TextField fx:id="field_decreaseBudget" layoutX="18.0" layoutY="256.0" prefHeight="51.0" prefWidth="373.0" promptText="0.0" />
                  <Button layoutX="100.0" layoutY="318.0" mnemonicParsing="false" onAction="#button_minusAmount" prefHeight="47.0" prefWidth="230.0" text="Decrease Amount ">
                     <font>
                        <Font name="Monaco" size="13.0" />
                     </font>
                  </Button>
                  <Separator layoutX="-2.0" layoutY="388.0" prefHeight="3.0" prefWidth="455.0" />
                  <Button layoutX="100.0" layoutY="403.0" mnemonicParsing="false" onAction="#button_viewBudgetAmount" prefHeight="47.0" prefWidth="230.0" style="-fx-background-color: #88EAAA;" text="View Budget Amount">
                     <font>
                        <Font name="Monaco" size="13.0" />
                     </font>
                  </Button>
                  <Button layoutX="100.0" layoutY="462.0" mnemonicParsing="false" onAction="#button_resetAmount" prefHeight="47.0" prefWidth="230.0" style="-fx-background-color: #ff6969;" text="Reset Budget Amount">
                     <font>
                        <Font name="Monaco" size="13.0" />
                     </font>
                  </Button>
               </children>
            </AnchorPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>
